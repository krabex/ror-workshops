.title
  = subject_item.decorate.title_with_assigned_teacher
%table.table.table-condensed
  %thead
    %tr
      %th.full-name= t('subjects.columns.full_name')
      %th.birthdate= t('subjects.columns.birthdate')
      %th.avg-notes= t('subjects.columns.avg_notes')
  %tbody
    - subject_item.students.each do |student|
      %tr
        %td.col-md-6= student.decorate.full_name
        %td.col-md-2= student.decorate.formatted_birthdate
        %td.col-md-4= student.decorate.avg_notes(subject_item)
